<h1>MY RESTAURANTS </h1>


{{#each user.restaurants }}
<div class="container">
    <div class="row">
        <div class="row my-3">
        <div class="col-2 col-l-2 col-xl-2 mx-4 my-4">
          <img class="card-img-top mt-3" src="{{this.image}}" alt="Restaurant image" >
        </div>
        <div class=" col-7 ">
          <div class="card-body">
            <h4 class="card-title capitalized"><b>{{this.name}}</b></h4>
            <h6 class="card-text capitalized"><b>Adress:</b></h6>
              <span class='capitalized'>{{this.adress.street}},</span>
              <span class='capitalized'>{{this.adress.zip}}</span>
              <br>
              <span class='capitalized'>{{this.adress.city}},</span>
              <span class='capitalized'>{{this.adress.country}}</span>
            </div>
        </div>
      </div>
      <hr>
    </div>
</div>
{{/each}}

