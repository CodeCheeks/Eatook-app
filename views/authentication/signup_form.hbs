<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="signup">Sign Up</div>
        <div class="login">Log In</div>
        
        <form action="/signup" method="POST" class="signup-form">
            <input type="email" name="email" placeholder="Your Email Address" class="input {{#if errors.email}}is-invalid{{/if}}" id="email" required><br />
            {{#if errors.email}}
                <div class="invalid-feedback">
                    {{errors.email}}
                </div>
            {{/if}}

             <input type="text" name="username" placeholder="Choose a Username" class="input {{#if errors.username}}is-invalid{{/if}}" id="username" required>
            {{#if errors.username}}
                <div class="invalid-feedback">
                    {{errors.username}}
                </div>
            {{/if}}

            <input type="password" name="password" placeholder="Choose a Password"  class="input {{#if errors.password}}is-invalid{{/if}}" id="password" required>
            {{#if errors.password}}
                <div class="invalid-feedback">
                    {{errors.password}}
                </div>
            {{/if}}

            <div class="mb-4">
                <input type="checkbox" name="role" value="owner">
                <label for="role" >Restaurant owner</label>
            </div>
            
            <button type="submit" class="btn btn-secondary" {{!-- data-bs-toggle="modal" data-bs-target="#register__modal" --}}>CREATE ACCOUNT</button>
        </form>
    
    </div>
</div>

