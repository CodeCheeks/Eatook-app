<div class="container__form__signup d-flex justify-content-center mt-2">
 
        <form action="/signup" method="POST" class="signup-form">
            <input type="text" name="firstname" placeholder="Firstname" class="input mb-1" value="{{userTemp.firstname}}" id="firstname" required>
            <input type="text" name="lastname" placeholder="Lastname" class="input mb-1" value="{{userTemp.lastname}}" id="lastname" required>
            {{#if errors.email}}
                <small class="text-danger">Invalid email</small>
            {{/if}}
            <input type="email" name="email" placeholder="Email Address" class="{{#if errors.email}} form-control is-invalid{{/if}} input mb-1" value="{{userTemp.email}}" id="email" required>
            <input type="tel" name="phonenumber" placeholder="Phone number" class="input mb-3" value="{{userTemp.phonenumber}}" id="phonenumber" pattern="[0-9]{9}" required>




            <div class="row">
                {{#if errors.pass}}
                 <small class="text-danger">Your password must contain at least 1 number, 1 uppercase, 1 lowercase and 8 characters.</small>
                {{/if}}

                {{#if errors.passMatch}}
                    <small class="text-danger">Passwords do not match</small>
                {{/if}}
                <div class="col">
                    <input type="password" name="password" placeholder="Password"  class="{{#if errors.pass}}form-control is-invalid{{/if}}{{#if errors.passMatch}}form-control is-invalid{{/if}} input" id="password" required>
                </div>
                <div class="col">
                    <input type="password" name="password2" placeholder="Repeat Password" class="{{#if errors.pass}}form-control is-invalid{{/if}} {{#if errors.passMatch}}form-control is-invalid{{/if}} input" id="password2" required>
                </div>
            </div>

            

            <div class="mb-2">
                <input type="checkbox" name="role" value="owner">
                <label for="role" >Restaurant owner</label>
            </div>
            
            <button type="submit" class="btn btn-success my-2">CREATE ACCOUNT</button>
            <div class="text-center w-100">
                <p class="text-muted font-weight-bold my-2">Already Registered? <a href="/login" class="text-primary ml-2">Login</a></p>
            </div>
        </form>

</div>

