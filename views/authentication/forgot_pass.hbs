<div class="container__form d-flex justify-content-center">
    <div class="row justify-content-center">
        <form action="/login/forgot-password" method="POST" class="login-form">
            <input type="email" name="email" placeholder="Email Address" class="input {{#if errors.email}}is-invalid{{/if}} " id="email" required><br />
            {{#if errors.email}}
                <div class="invalid-feedback">
                    {{errors.email}}
                </div>
            {{/if}}
            <button type="submit" class="btn btn-secondary mt-4">SUBMIT</button>
        </form>
    </div>
</div>

